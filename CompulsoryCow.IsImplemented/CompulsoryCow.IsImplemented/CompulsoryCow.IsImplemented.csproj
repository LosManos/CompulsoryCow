<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <AssemblyVersion>0.7.0</AssemblyVersion>
    <FileVersion>0.7.0</FileVersion>
    <Version>0.7.0</Version>

    <LangVersion>10.0</LangVersion>
    <Nullable>enable</Nullable>
    
    <Authors>LosManos</Authors>
    <Company>LosManos</Company>
    <Product>CompulsoryCow.IsImplemented</Product>
    <Title>CompulsoryCow.IsImplemented</Title>
    <Copyright>LGPLv3 + NoEvil</Copyright>

    <PackageLicenseFile>license.txt</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/LosManos/CompulsoryCow</PackageProjectUrl>
    <RepositoryUrl>https://github.com/LosManos/CompulsoryCow</RepositoryUrl>

    <Description>
      Methods for testing if `Equals` has been implemented and has done so correctly.
      Methods for testing if all classes with a (custom) attribute has default constructor. Use for making sure all DTOs are serialisable through standard dotnet method.
    </Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\license.txt" Pack="true" PackagePath="$(PackageLicenseFile)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CompulsoryCow.Meta" Version="6.2.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.4.0" />
  </ItemGroup>

</Project>
